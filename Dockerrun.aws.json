{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "nginx",
            "image": "ardiank/budgetcompanionnginx",
            "hostname": "nginx",
            "essential": true,
            "environment": [
                {
                    "name": "DOCKERHUB_USERNAME",
                    "valueFrom": "arn:aws:secretsmanager:region:account-id:secret:dockerhub/credentials:SecretString:username"
                },
                {
                    "name": "DOCKERHUB_PASSWORD",
                    "valueFrom": "arn:aws:secretsmanager:region:account-id:secret:dockerhub/credentials:SecretString:password"
                }
                ],
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["frontend", "backend"],
            "memory": 300   
        },
        {
            "name": "frontend",
            "image": "ardiank/budgetcompanionfrontend",
            "hostname": "frontend",
            "essential": false,
            "memory": 300
        },
        {
            "name": "backend",
            "image": "ardiank/budgetcompanionbackend",
            "hostname": "backend",
            "essential": false,
            "memory": 300
        }
    ]
}